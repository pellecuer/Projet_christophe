{% extends 'base.html.twig' %}

{% block title %}Liste des TJM{% endblock %}

{% block body %}
<div class="container">
    <h1>Tjm index</h1>

    <table class="table table-striped table-hover table-md shadow-lg">
        <thead>
            <tr>
                <th>Id</th>
                <th>Montant</th>
                <th>Pole</th>
                <th>Projet</th>
                <th>Voir</th>
                <th>Editer</th>
            </tr>
        </thead>
        <tbody>
        {% for tjm in tjms %}
            <tr>
                <td>{{ tjm.id }}</td>
                <td>{{ tjm.amount }}</td>
                <td>{{ tjm.pole }}</td>
                <td>{{ tjm.project }}</td>
                <td>
                    <a href="{{ path('tjm_show', {'id': tjm.id}) }}"><i class="fas fa-eye PurpleHaze"></i></a>                    
                </td>
                <td>
                    <a href="{{ path('tjm_edit', {'id': tjm.id}) }}"><i class="fas fa-edit PurpleHaze"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class= "btn btn-default" href="{{  path('tjm_new') }}"><i class="fas fa-plus"></i> Ajouter</a>
</div>
{% endblock %}
