{% extends 'base.html.twig' %}

{% block title %}Collaborators index{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des collaborateurs</h1>

    <table class="table table-striped table-hover table-md shadow-lg" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th>Code</th>
                <th>Email</th>
                <th>Voir</th>
                <th>Editer</th>
            </tr>
        </thead>
        <tbody>
        {% for collaborator in collaborators %}
            <tr>
                <td>{{ collaborator.id }}</td>
                <td>{{ collaborator.firstName }}</td>
                <td>{{ collaborator.lastName }}</td>
                <td>{{ collaborator.codeFirstName }}</td>
                <td>{{ collaborator.email }}</td>
                <td>
                    <a href="{{ path('collaborators_show', {'id': collaborator.id}) }}"> <i class="fas fa-eye PurpleHaze"></i></a>                    
                </td>
                <td>
                    <a href="{{ path('collaborators_edit', {'id': collaborator.id}) }}"> <i class="fas fa-edit PurpleHaze"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a class= "btn btn-default" href="{{ path('collaborators_new') }}"><i class="fas fa-plus"></i> Ajouter</a>
</div>
{% endblock %}
