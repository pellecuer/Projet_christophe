{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
<div class="container">
        <h1>Liste des projets</h1>

    <table id="projectTable" class="table table-striped table-hover table-md shadow-lg" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Code</th>
                <th>Date de d√©but</th>
                <th>Date de fin</th>
                <th>Voir</th>
                <th>Editer</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.code }}</td>                
                <td>{{ project.startDate ? project.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ project.endDate ? project.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('project_show', {'id': project.id}) }}"><i class="fas fa-eye PurpleHaze"></i></a>                    
                </td>
                <td>
                    <a href="{{ path('project_edit', {'id': project.id}) }}"><i class="fas fa-edit PurpleHaze"></i></a>
                </td>
                <td>
                    {{ include('project/_delete_form.html.twig')}}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class= "btn btn-default" href="{{ path('project_new') }}"><i class="fas fa-plus"></i> Ajouter</a>
</div>
{% endblock %}
