{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
<div class="container">
    <h1>Project index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>Type</th>
                <th>Cost</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.code }}</td>
                <td>{{ project.type }}</td>
                <td>{{ project.cost }}</td>
                <td>{{ project.startDate ? project.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ project.endDate ? project.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('project_show', {'id': project.id}) }}">show</a>
                    <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('project_new') }}">Create new</a>
</div>
{% endblock %}
