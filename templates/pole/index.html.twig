{% extends 'base.html.twig' %}

{% block title %}Pole index{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des poles</h1>

    <table class="table table-striped table-hover table-md shadow-lg">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Code</th>
                <th>Voir</th>
                <th>Editer</th>
            </tr>
        </thead>
        <tbody>
        {% for pole in poles %}
            <tr>
                <td>{{ pole.id }}</td>
                <td>{{ pole.name }}</td>
                <td>{{ pole.codePole }}</td>
                <td>
                    <a href="{{ path('pole_show', {'id': pole.id}) }}"><i class="fas fa-eye PurpleHaze"></i></a>                    
                </td>
                <td>
                    <a href="{{ path('pole_show', {'id': pole.id}) }}"><i class="fas fa-edit PurpleHaze"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class= "btn btn-default" href="{{ path('pole_new') }}"><i class="fas fa-plus"></i> Ajouter</a>
</div>
{% endblock %}
