{% extends 'base.html.twig' %}

{% block title %}Pole index{% endblock %}

{% block body %}
    <h1>Pole index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code_pole</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pole in poles %}
            <tr>
                <td>{{ pole.id }}</td>
                <td>{{ pole.name }}</td>
                <td>{{ pole.codePole }}</td>
                <td>
                    <a href="{{ path('pole_show', {'id': pole.id}) }}">show</a>
                    <a href="{{ path('pole_edit', {'id': pole.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pole_new') }}">Create new</a>
{% endblock %}
