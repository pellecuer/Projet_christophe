{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container mt-4" id="search-panel">
    <div class="jumbotron">
        <h1 class="mb-5 text-center"><i class="fas fa-search"></i><span class="ml-1">Trouvez un projet</span></h1>
        <form>
            <div class="row align-items-center justify-content-center">
                <div class="col-sm-4">
                    <input type="text" class="form-control" placeholder="Entrez une date">
                </div>
                <div class="col-auto text-center ">et / ou</div>
                <div class="col-sm-4">
                    <input type="select" id="recherche" class="form-control" placeholder="Premières lettres du projet">
                </div>
                    <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                    </div>                   
            </div>               
        </form>
    </div>        
</div>

<div class="container lastProjects">
    <h5>Les 5 derniers projets</h5>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th scope="col">Nom</th>
            <th scope="col">Code</th>
            <th scope="col">Date de début</th>
            <th scope="col">Date de fin</th>
            </tr>
        </thead>
        <tbody>
            {% for project in projects %}
            <tr>
            <th scope="row">{{ project.name }}</th>
            <td>{{ project.code }}</td>            
            <td>{{ project.startDate|date('d M Y') }}</td>
            <td>{{ project.endDate|date('d M Y') }}</td>
            <td><a class="btn btn-primary" href={{path('show', {'id': project.id}) }} role="button"><i class="far fa-clock"></i></a></td>
            </tr>
            {% endfor %}
            
        </tbody>
    </table>
</div>
{% endblock %}
