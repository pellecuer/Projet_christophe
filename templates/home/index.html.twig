{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
{% include 'home/_searchProject.html.twig' %}

<div class="container lastProjects">
    <h5>Les 5 derniers projets</h5>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th scope="col">Nom</th>
            <th scope="col">Code</th>
            <th scope="col">Date de d√©but</th>
            <th scope="col">Date de fin</th>
            </tr>
        </thead>
        <tbody>
            {% for project in projects %}
            <tr>
            <th scope="row">{{ project.name }}</th>
            <td>{{ project.code }}</td>            
            <td>{{ project.startDate|date('d M Y') }}</td>
            <td>{{ project.endDate|date('d M Y') }}</td>
            <td><a class="btn btn-primary" href={{path('show', {'id': project.id}) }} role="button"><i class="far fa-clock"></i></a></td>
            </tr>
            {% endfor %}
            
        </tbody>
    </table>
</div>
{% endblock %}
