{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block searchProject %}{% include 'home/_searchProject.html.twig' %} {% endblock %}

{% block body %} 
<div class="container lastProjects">
    <h1 class="label">{{ Arraytitle }}</h1>
    <table class="table table-striped table-hover table-md shadow-lg rounded">
        <thead>
            <tr>
            <th scope="col">Nom</th>
            <th scope="col">Code</th>
            <th scope="col">Date de début</th>
            <th scope="col">Date de fin</th>
            <th scope="col" class="text-center">Voir le prévisionnel</th>
            </tr>
        </thead>
        <tbody>
            {% for project in projects %}
            <tr>
            <th scope="row">{{ project.name }}</th>
            <td>{{ project.code }}</td>            
            <td>{{ project.startDate|localizeddate('none', 'none', 'fr', null, 'dd MMM Y') }}</td>
            <td>{{ project.endDate|localizeddate('none', 'none', 'fr', null, 'dd MMM Y') }}</td>
            <td class="text-center"><a class="btn btn-default" href={{path('show', {'id': project.id}) }} role="button"><i class="far fa-clock"></i></a></td>
            </tr>
            {% endfor %}
            
        </tbody>
    </table>
</div>
{% endblock %}
