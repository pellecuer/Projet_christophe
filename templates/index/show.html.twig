{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<div class="container-fluid">    
    <div class="jumbotron bg-dark">
        <h1 class="text-center text-white">PROJET NUMERO1</h1>       
    </div>    
</div>
<div class="container mt-5 invisible" id="response">
    <div class="alert alert-success">Vous avez attribu√© la note de <span class="badge badge-secondary" id="rank"></span> </div>
</div>
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message}}
    </div> 
{% endfor %}

<div class="invisible" id="key">{{ (key) }}</div>
<div class="invisible" id="nbColumns">{{ (nbColumns) }}</div>
<div class="container">   
    <div class="mb-5 text-right">
        <button type="button" class="btn btn-primary previous"><i class="fas fa-step-backward"></i></button>
        <span class="" id="currentMonth">{{ currentMonth }}</span>
        <div class="btn btn-primary next"><i class="fas fa-step-forward"></i></div>    
    </div>
    <table id="example" class="display" style="width:100%">
        <thead>           
            <tr>
                <th>Profil</th>                               
                {% for calendar in calendars %}
                    <th>{{ calendar }}</th>                    
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for row in works %}
            <tr>
                <td class="profile">{{ row.0 }}</td>                
                {% for rank in row.1 %}
                    {% if rank is defined and not null %}
                        <td class="edit-for">{{ rank }}</td>
                    {% else %}
                        <td class="edit-for"></td>
                    {% endif %}
                {% endfor %}
            </tr>
            {% endfor %} 
        </tbody>
        {# <tfoot>
            <tr>
                <th></th>
                {% for calendar in calendars %}
                    <th>{{ calendar }}</th>                    
                {% endfor %}
            </tr>
        </tfoot>        #}
    </table> 
</div>
{% endblock %}
