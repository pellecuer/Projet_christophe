{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
    {# Search #}
    <div class="container mt-4 collapse" id="search-panel">
        <div class="jumbotron">
            <h1 class="mb-5 text-center"><i class="fas fa-search"></i><span class="ml-1">Trouvez un projet</span></h1>
            <form>
                <div class="row align-items-center justify-content-center">
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="Entrez une date">
                    </div>
                    <div class="col-auto text-center ">et / ou</div>
                    <div class="col-sm-4">
                        <input type="select" id="recherche" class="form-control" placeholder="Premières lettres du projet">
                    </div>
                     <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Rechercher</button>
                     </div>                   
                </div>               
            </form>
        </div>
    </div>
    {# Messages flash #}            
    <div class="invisible" id="response">
        <div class="alert alert-success">Vous avez attribué la note de <span class="badge badge-secondary" id="rank"></span> </div>
        {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message}}
        </div>
        {% endfor %}
    </div>

    {# Invisible key #}
    <div class="invisible" id="key">{{ key }}</div>
    <div class="invisible" id="nbColumns">{{ nbColumns }}</div>
    <div class="invisible" id="projectName">{{ projectName }}</div>

    {# datatable and bottoms #}
    <div class="container">
        <h1 class="text-center">{{ projectName }}</h1>   
        <div class="mb-5 mx-5 text-right">
            <button type="button" class="btn btn-primary previous"><i class="fas fa-step-backward"></i></button>
            <span class="" id="currentMonth">{{ currentMonth }}</span>
            <div class="btn btn-primary next"><i class="fas fa-step-forward"></i></div>    
        </div>
        <table id="example" class="display" style="width:100%">
            <thead>           
                <tr>
                    <th>Poles</th>                               
                    {% for calendar in calendars %}
                        <th>{{ calendar }}</th>                    
                    {% endfor %}
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {# {% for row in activities %}
                <tr>
                    <td class="profile">{{ row.0 }}</td>                         
                    {% for Activity in row.1 %}
                        {% if Activity %}
                            <td class="edit-for" id = "{{ Activity.id }}">{{ Activity.rank }}</td>
                        {% else %}
                            <td class="edit-for" id = "0" ></td>
                        {% endif %}
                    {% endfor %}
                    <td class="trash"><i class="fas fa-trash-alt"></i></td>                    
                </tr>   
                {% endfor %}  #}
                {% set counter = 1 %}
                {% set row = 'row'%}               
                {% for pole in all %}
                    <tr class = "poleclickable bg-secondary text-white" data-toggle="collapse" id= "{{ row ~ counter }}" data-target="{{'.' ~ row ~ counter }}">
                        <td class>{{ pole.0 }}</td> 
                            {% for calendar in calendars %} 
                                <td></td>
                            {% endfor %}
                        <td><i class="fas fa-plus"></i></td>
                    </tr>
                    {% for rowProfile in pole.1 %}                                   
                    <tr class="collapse {{ row ~ counter }}">
                        <td>{{ rowProfile.0 }}</td>
                        {% for activity in rowProfile.1%} 
                                <td class="edit-for" id= {{ activity ? activity.id:'' }}>{{ activity ? activity.rank : '' }}</td>
                        {% endfor %}
                        <td></td>                                           
                    </tr>
                    {% endfor %}                   
                    
                     {% set counter = counter + 1 %}                                    
                {% endfor %}
                



            </tbody>            
        </table>
        <button class="btn btn-primary addRow mb-2" type="submit"><i class="fa fa-plus" aria-hidden="true"></i></button>    
    </div>

{% endblock %}
